<script>
n=15;
chanceOfWinning=0;
for(p=0;p<Math.pow(2,n);p++) {
 chanceOfEvent=1;
 blueDisks=0;
 for(i=0;i<n;i++) {
  if((1 << i)&p) {
   chanceOfEvent*=1/(i+2);
   blueDisks++;
  }
  else
   chanceOfEvent*=(i+1)/(i+2);
 }
 if(blueDisks > n/2)
  chanceOfWinning+=chanceOfEvent;
}
document.write(Math.floor(1/chanceOfWinning));
</script>
